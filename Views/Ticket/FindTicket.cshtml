
@{
    ViewBag.Title = "FindTicket";
    Layout = "~/Views/Shared/_LayoutzKhach.cshtml";
}
<style>
    .header {
        background-color: #e74c3c;
        padding: 10px 0;
    }

    .header img {
        height: 40px;
    }

    .header a {
        color: #fff;
        margin-left: 20px;
        font-weight: bold;
    }

    .search-container {
        background-color: #e0e0e0;
        border-radius: 10px;
        padding: 20px;
        width: 100%;
        max-width: 400px;
        margin: 50px auto;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }

    .search-container h4 {
        color: #e74c3c;
    }

    .captcha img {
        border-radius: 5px;
    }

    .btn-primary {
        background-color: #6c5ce7;
        border: none;
        width: 100%;
    }

    .btn-primary:hover {
        background-color: #4834d4;
    }
</style>

<div class="header d-flex align-items-center">
    <div class="container d-flex justify-content-between align-items-center">
        <img src="https://futabus.vn/_next/static/media/logo_banner_mb.6e0db6f9.svg" alt="Logo">
        <div>
            <a href="/Home/Index">
                <i></i>
                <span>Quay lại</span>
            </a>

        </div>
    </div>
</div>
<div class="search-container text-center">
    <h4>Tra cứu thông tin vé</h4>
    <form action="/KhachHang/KQTraCuuVe" method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <input type="text" class="form-control" id="secretCode" name="txtMave" placeholder="Nhập Mã Vé">
        </div>


        <button type="submit" class="btn btn-primary">Tra cứu</button>
    </form>
</div>