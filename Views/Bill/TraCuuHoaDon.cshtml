
@{
    ViewBag.Title = "TraCuuHoaDon";
    Layout = "~/Views/Shared/_LayoutzKhach.cshtml";
}
@model List<Ticket_Booking_System.Models.Bill>

<div class="header d-flex align-items-center">
    <div class="container d-flex justify-content-between align-items-center">
        <img src="https://futabus.vn/_next/static/media/logo_banner_mb.6e0db6f9.svg" alt="Logo">
        <div>
            <a href="/Home/Index">
                <i></i>
                <span>Quay lại</span>
            </a>

        </div>
    </div>
</div>
<div class="search-container d-flex justify-content-center align-items-center" style="min-height: 60vh;">
    <div class="card p-4" style="width: 350px;">
        <h4 class="text-center mb-4">Tra cứu hóa đơn</h4>
        <form action="/Bill/TraCuuHoaDon" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <input type="text" class="form-control" id="secretCode" placeholder="Mã số hóa đơn" name="MaHD">
            </div>
            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger text-center">
                    @ViewBag.Error
                </div>
            }
            <button type="submit" class="btn btn-primary w-100">Tra cứu</button>
        </form>
    </div>
</div>

<div class="container mt-5">
    <h3>Thông tin hóa đơn</h3>
    <table class="table table-bordered table-striped table-hover">
        <thead class="table-dark text-center">
            <tr>
                <th>Mã hóa đơn</th>
                <th>Ngày mua</th>
                <th>Số lượng vé</th>
                <th>Tổng tiền</th>
                <th>Mã khách hàng</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody class="text-center">
            @foreach (var bill in Model)
            {
                <tr>
                    <td>@bill.BillID</td>
                    <td>@bill.CreateAt.ToString("dd/MM/yyyy")</td>
                    <td>@bill.Quantity</td>
                    <td>@bill.Total.ToString("N0") VND</td>
                    <td>@bill.Customer.CustomerID</td>
                    <td>
                        <a href="@Url.Action("ChiTietHoaDon", "Bill", new { id = bill.BillID })" class="btn btn-primary btn-sm">Xem chi tiết</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>