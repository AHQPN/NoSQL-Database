@using Ticket_Booking_System.Models
@using System.Web.Mvc.Html
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" rel="stylesheet">
    <link href="~/Content/css/base.css" rel="stylesheet" />
    <link href="~/Content/css/style.css" rel="stylesheet" />
    <link href="~/Content/css/admin.css" rel="stylesheet" />
    <link href="~/Content/css/ticketagent.css" rel="stylesheet" />
</head>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<body>
    <nav class="navbar fixed-top navbar-custom">
        <div class="container-fluid">
            <div class="d-flex align-items-center">
                <button class="navbar-toggler d-lg-none border-0 me-3" type="button"
                        data-bs-toggle="offcanvas" data-bs-target="#offcanvasSidebar"
                        aria-controls="offcanvasSidebar">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <a href="/TicketAgent/Dashboard" class="navbar-brand mb-0">
                    <img src="https://futabus.vn/_next/static/media/logo_banner_mb.6e0db6f9.svg" alt="Logo" height="40">
                </a>
            </div>
            <form method="post" action="@Url.Action("Logout", "Auth")" class="d-inline ms-auto">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-outline-light btn-logout">
                    <i class="bi bi-box-arrow-right me-2"></i>
                    <span class="d-none d-sm-inline">Đăng xuất</span>
                </button>
            </form>
        </div>
    </nav>

    <div class="sidebar d-none d-lg-block">
        <div class="user-info">
            <img src="@Session["Avatar"] ?? " /Content/images/default-avatar.png"" class="user-image" alt="Avatar" />
            <h6>@(Session["UserName"]?.ToString() ?? "UserName")</h6>
        </div>
        <nav class="nav flex-column">
            <a class="nav-link @(Request.RawUrl == "/TicketAgent/Dashboard" ? "active" : "")" href="/TicketAgent/Dashboard">
                <i class="bi bi-speedometer2"></i> <span>Thống Kê</span>
            </a>
            <a class="nav-link @(Request.RawUrl == "/ListTicketManagement/Index" ? "active" : "")" href="/ListTicketManagement/Index">
                <i class="bi bi-people"></i> <span>Danh Sách Vé</span>
            </a>
        </nav>
    </div>

    <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasSidebar" aria-labelledby="offcanvasSidebarLabel">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title" id="offcanvasSidebarLabel">
                <i class="bi bi-bus-front me-2"></i> XE KHÁCH PHƯƠNG TRANG
            </h5>
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas"></button>
        </div>
        <div class="offcanvas-body">
            <nav class="nav flex-column">
                <a class="nav-link @(Request.RawUrl == "/TicketAgent/Dashboard" ? "active" : "")" href="/TicketAgent/Dashboard">
                    <i class="bi bi-speedometer2"></i> <span>Thống Kê</span>
                </a>
                <a class="nav-link @(Request.RawUrl == "/ListTicketManagement/Index" ? "active" : "")" href="/ListTicketManagement/Index">
                    <i class="bi bi-people"></i> <span>Danh Sách Vé</span>
                </a>
            </nav>
        </div>
    </div>

    <main class="main-content">
        @RenderBody()
    </main>

    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @*@Scripts.Render("~/bundles/jquery")*@
    @RenderSection("scripts", required: false)
</body>
</html>
