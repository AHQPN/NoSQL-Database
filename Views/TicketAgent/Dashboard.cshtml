@{
    ViewBag.Title = "Dashboard TicketAgent";
    Layout = "~/Views/Shared/_Layout_NhanVien.cshtml";
}

<div class="container mt-4">
    <h3 class="mb-3">Thống kê nhanh</h3>
    <div class="row">
        <div class="col-md-4">
            <div class="card ticket-card mb-3 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-ticket-alt me-2"></i>Số vé bán hôm nay</h5>
                    <p class="card-text display-5 fw-bold">@ViewBag.TicketsSoldToday</p>
                </div>
            </div>
        </div>
    </div>

    <h4 class="mt-4"><i class="fas fa-bus me-2"></i>Tình trạng ghế từng chuyến</h4>
    <table class="table table-striped table-bordered mt-2">
        <thead class="table-dark">
            <tr>
                <th>Tên chuyến</th>
                <th>Tổng số ghế</th>
                <th>Ghế đã bán</th>
                <th>Ghế trống</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var trip in ViewBag.TripStats)
            {
                <tr>
                    <td>@trip.TripName</td>
                    <td>@trip.TotalSeats</td>
                    <td>@trip.BookedSeats</td>
                    <td>@trip.AvailableSeats</td>
                </tr>
            }
        </tbody>
    </table>
</div>